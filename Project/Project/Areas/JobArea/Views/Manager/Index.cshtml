@{
    ViewBag.Title = "管理";
}
@section styles{
    <style>
        body {
            background-color: antiquewhite;
            padding-top: 15px;
            font-size: 12px;
        }

        .main {
            max-width: 320px;
            margin: 0 auto;
        }

        .login-or {
            position: relative;
            font-size: 18px;
            color: #aaa;
            margin-top: 10px;
            margin-bottom: 10px;
            padding-top: 10px;
            padding-bottom: 10px;
        }

        .span-or {
            display: block;
            position: absolute;
            left: 50%;
            top: -2px;
            margin-left: -25px;
            background-color: #fff;
            width: 50px;
            text-align: center;
        }

        .hr-or {
            background-color: #cdcdcd;
            height: 1px;
            margin-top: 0px !important;
            margin-bottom: 0px !important;
        }

        h3 {
            text-align: center;
            line-height: 300%;
        }

        #beautiful {
            text-align: center;
            line-height: 300%;
            font-weight: bold;
            font-family: 'Microsoft JhengHei';
        }

        #lookgood {
            text-align: center;
            line-height: 300%;
            width: 400px;
            font-size: 10px;
            font-weight: bold;
            font-family: 'Microsoft JhengHei';
        }
    </style>
}
<p class="text-success">@ViewBag.StatusMessage</p>

<div>
    <h4>變更帳戶設定</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>密碼:</dt>
        <dd>
            [
            @if (Request.Cookies["nameID"].Value != null)
            {
                @Html.ActionLink("變更密碼", "ChangePassword",new { id= Request.Cookies["nameID"].Value })
            }
            else
            {
                @Html.ActionLink("建立", "SetPassword")
            }
            ]
        </dd>
        <dt>工作管理:</dt>
        <dd>            
           [@Html.ActionLink("管理", "ManageLogins") ] 
        </dd>
        <dt>公司明細修改:</dt>
        <dd>
            [@Html.ActionLink("修改資料","Edit", "Employer",new { id= Request.Cookies["nameID"].Value },"")]
            
        </dd>
    </dl>
</div>