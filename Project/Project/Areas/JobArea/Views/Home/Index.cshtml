@using PagedList;
@using PagedList.Mvc;
@model IPagedList<Project.Areas.JobArea.Models.Job>
@{
    ViewBag.Title = "工作檢視";
}
@section styles{
    <style>
        body {
            background-color:antiquewhite;
            padding-top: 15px;
            font-size: 12px;
        }

        .main {
            max-width: 320px;
            margin: 0 auto;
        }

        .login-or {
            position: relative;
            font-size: 18px;
            color: #aaa;
            margin-top: 10px;
            margin-bottom: 10px;
            padding-top: 10px;
            padding-bottom: 10px;
        }

        .span-or {
            display: block;
            position: absolute;
            left: 50%;
            top: -2px;
            margin-left: -25px;
            background-color: #fff;
            width: 50px;
            text-align: center;
        }

        .hr-or {
            background-color: #cdcdcd;
            height: 1px;
            margin-top: 0px !important;
            margin-bottom: 0px !important;
        }

        h3 {
            text-align: center;
            line-height: 300%;
        }
    </style>
}

<div class="row">
    <div class="col-lg-3">
        <label for="Jobnamesreach">工作名稱搜尋:</label>
        <input id="Jobnamesreach" name="Jobnamesreach" type="text"/>
    </div>
    <div class="col-lg-3">
        <label for="Workplacesreach">工作地點搜尋:</label>
        <input id="Workplacesreach" name="Workplacesreach" type="text" />
    </div>
    <div class="col-lg-3">
        <label for="Allsreach">關鍵字搜尋:</label>
        <input id="Allsreach" name="Allsreach" type="text" />          
    </div>
    <div class="col-lg-3">
         <a id="sreach" class="btn btn-success">GO</a>
    </div>
</div>

<div class="row">
    <div class="col-lg-7">
        <table id="jobTable" class="table table-bordered table-hover table-striped">
            <thead>
                <tr>
                    <th>@Html.ActionLink(@Html.DisplayNameFor(p => p.First().JobID).ToHtmlString(), "Index","Home", new { sortBy = ViewBag.SortbyID, Allsreach= ViewBag.SreachbyAll, Workplacesreach= ViewBag.SreachbyPlace, Jobnamesreach= ViewBag.SreachbyName },null)</th>
                    <th>@Html.ActionLink(@Html.DisplayNameFor(p => p.First().JobName).ToHtmlString(), "Index", "Home", new { sortBy = ViewBag.SortbyID, Allsreach = ViewBag.SreachbyAll, Workplacesreach = ViewBag.SreachbyPlace, Jobnamesreach = ViewBag.SreachbyName }, null)</th>
                    <th>@Html.ActionLink(@Html.DisplayNameFor(p => p.First().Workplace).ToHtmlString(), "Index", "Home", new { sortBy = ViewBag.SortbyID, Allsreach = ViewBag.SreachbyAll, Workplacesreach = ViewBag.SreachbyPlace, Jobnamesreach = ViewBag.SreachbyName }, null)</th>
                    <th>所屬公司</th>
                    <th>詳細資料</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(m => p.JobID)</td>
                        <td>@Html.DisplayFor(m => p.JobName)</td>
                        <td>@Html.DisplayFor(m => p.Workplace)</td>
                        <td></td>
                        <td><a href="@Url.Action("Detail","Home",new { Area="JobArea",id=p.JobID})" class="btn btn-info">詳細資料</a></td>
                    </tr>                    
                }
            </tbody>
        </table>
    </div>
</div>
<div class="row">
    <div class="col-lg-6">
        @Html.PagedListPager(Model, p => Url.Action("Index", new { page = p, sortBy = Request.QueryString["sortBy"], Allsreach = ViewBag.SreachbyAll, Workplacesreach = ViewBag.SreachbyPlace, Jobnamesreach = ViewBag.SreachbyName }), PagedListRenderOptions.ClassicPlusFirstAndLast)
    </div>
    @*新增資料*@
    @*<div class="col-lg-6">
        <a class="btn btn-success" href="@Url.Action"></a>
    </div>*@
</div>

<script src="~/Scripts/jquery-3.1.1.min.js"></script>
@section scripts{
    <script>
        $("#sreach").click(function () {
            var strlink = "@Url.Action("Index", "Home",new { Area="JobArea"})";
            strlink += "?Jobnamesreach=" + $("#Jobnamesreach").val();
            strlink += "&Workplacesreach=" + $("#Workplacesreach").val();
            strlink += "&Allsreach=" + $("#Allsreach").val();
            $(this).attr("href", strlink);

        })
    </script>
    }