@model Project.Areas.JobArea.Models.Job
@{
    ViewBag.Title = "主動應徵";
}
@section styles{
    <style>
        body {
            background-color: antiquewhite;
            padding-top: 15px;
            font-size: 12px;
        }

        .main {
            max-width: 320px;
            margin: 0 auto;
        }

        .login-or {
            position: relative;
            font-size: 18px;
            color: #aaa;
            margin-top: 10px;
            margin-bottom: 10px;
            padding-top: 10px;
            padding-bottom: 10px;
        }

        .span-or {
            display: block;
            position: absolute;
            left: 50%;
            top: -2px;
            margin-left: -25px;
            background-color: #fff;
            width: 50px;
            text-align: center;
        }

        .hr-or {
            background-color: #cdcdcd;
            height: 1px;
            margin-top: 0px !important;
            margin-bottom: 0px !important;
        }

        h3 {
            text-align: center;
            line-height: 300%;
        }

        #beautiful {
            text-align: center;
            line-height: 300%;
            font-weight: bold;
            font-family: 'Microsoft JhengHei';
        }

        #lookgood {
            text-align: center;
            line-height: 300%;
            width: 400px;
            font-size: 10px;
            font-weight: bold;
            font-family: 'Microsoft JhengHei';
        }
    </style>
}
@using (Html.BeginForm("Hire", "Home", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
{
    <div class="row">
        <div class="col-lg-3"></div>
        <div class="col-lg-7">
            <div class="form-group">
                @Html.LabelFor(e => e.JobName, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    <p class="beautiful">@Html.DisplayFor(e => e.JobName)</p> 
                </div>
            </div>
        </div>
        <div class="col-lg-2"></div>
    </div>
}
