@model Project.Areas.JobArea.Models.Job
@{
    ViewBag.Title = "工作修改";
}
@using (Html.BeginForm("Edit", "Job", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
{
    <div class="form-group">
        @Html.LabelFor(e => e.JobName, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.EditorFor(e => e.JobName, new { htmlAttributes = new { placehoder = "JobName", @class = "form-control" } })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(e => e.JobStartTime, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.EditorFor(e => e.JobStartTime, new { htmlAttributes = new { placehoder = "JobStartTime", @class = "form-control" } })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(e => e.TimeID, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @{
                var times = new SelectList(ViewBag.datas, "TimeID", "jobtimes");
            }
            @Html.DropDownListFor(e => e.TimeID, times, "請選擇時段", new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(e => e.PayPerHour, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.EditorFor(e => e.PayPerHour, new { htmlAttributes = new { placehoder = "PayPerHour", @class = "form-control" } })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(e => e.Workplace, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.EditorFor(e => e.Workplace, new { htmlAttributes = new { placehoder = "Workplace", @class = "form-control" } })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(e => e.Description, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.EditorFor(e => e.Description, new { htmlAttributes = new { placehoder = "Description", @class = "form-control" } })
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-success">修改</button>
        </div>
    </div>
                }